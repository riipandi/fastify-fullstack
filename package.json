{
    "name": "fastack",
    "version": "1.0.0",
    "description": "An experimental repo for exploring Fastify, Drizzle ORM, and HTMX",
    "license": "MIT",
    "author": "Aris Ripandi <aris@duck.com>",
    "main": "app.js",
    "scripts": {
        "build": "rimraf dist && swc src -d dist",
        "build:watch": "swc src -w --out-dir dist",
        "dev": "concurrently --raw --hide 0 \"pnpm build:watch\" \"pnpm start:watch\"",
        "start": "NODE_ENV=production node dist/src/app.js",
        "start:watch": "node --watch-path=dist dist/src/app.js",
        "check": "biome check --apply .",
        "format": "biome format . --write",
        "lint": "biome lint --apply .",
        "cleanup": "rimraf dist",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "test": "jest --testPathIgnorePatterns \"/(routes|database)/\""
    },
    "dependencies": {
        "@fastify/autoload": "^5.8.0",
        "@fastify/sensible": "^5.5.0",
        "@fastify/static": "^6.12.0",
        "@fastify/view": "^8.2.0",
        "@fastrue/fastify": "^0.0.6",
        "@mgcrea/fastify-request-logger": "^1.4.0",
        "@mgcrea/pino-pretty-compact": "^1.3.0",
        "dotenv": "^16.4.1",
        "drizzle-orm": "^0.29.3",
        "drizzle-zod": "^0.5.1",
        "fastify": "^4.26.0",
        "fastify-cli": "^6.1.0",
        "fastify-plugin": "^4.5.1",
        "liquidjs": "^10.10.0",
        "postgres": "^3.4.3",
        "zennv": "^0.1.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@swc/cli": "^0.3.5",
        "@swc/core": "^1.3.107",
        "@swc/jest": "^0.2.31",
        "@types/node": "^20.11.13",
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "npm-check-updates": "^16.14.14",
        "rimraf": "^5.0.5",
        "tap": "^18.7.0",
        "typescript": "^4.6.3"
    },
    "engines": {
        "node": ">=18.17.1"
    }
}
